<div class="welcome">
<%@students.each do |stud|%>
 <form action="/search/<%=stud.username%>" method="get">
   <span><input type="search" placeholder="Search Broncos by First Name.." name="student[first_name]"></input>
   <input type="submit" class="search_btn"> </input>
   </span>
 </form>  
 <form action="/delete/<%=stud.username%>" method="post">
   <span class="menu">
   <a href="/edit/<%=stud.scu_email%>"> Edit Profile</a>
   <input type="submit" value="Delete Profile" class="delete_cls"></input>
   <input type="hidden" name="_method" value="DELETE"></input>
   <a href="/"> SignOut </a>
   </span>
   
   <div class="personal_data">
      <span>
         <img src="/images/profile_image.gif"> 
         <h1> <%=stud.first_name%> <%=stud.last_name%> </h1>
         <h2> <%=stud.program_name%></h2>
         <label> Email: - <%=stud.scu_email%>
         </label>
      </span>
      <label style="position: relative; align-items: left; float: left; padding-left: 122px; margin-top: -14px;">  <strong>Member since-</strong> <%=stud.registered_on.strftime("%B %e, %Y")%></label> </br></br>
      <label   style="margin-left: 124px;"> <strong>Expected Graduation Year - </strong><%=stud.expected_grad_year%></label>
      </br></br>
      <label   style="margin-left: 124px;"><strong> Courses Taken-</strong> </label>
      <% courses_array = stud.courses.split(',')%>
      <ul>
         <% courses_array.each do |course|%>
         <li> <%=course%></li>
         <%end%>
      </ul>
      <%end%>
   </div>
   </form>
</div>